<databaseChangeLog 
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	logicalFilePath="/com/onbelay/dag/table/GRAPH_LINK.xml">
	
  <changeSet author="dag" id="1.0" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  
  <createSequence
   		incrementBy="1"
   		sequenceName="GRAPH_LINK_SEQ"
   		startValue="1"	
   />
  
  
    <createTable tableName="GRAPH_LINK" tablespace="${tblspace_data}">
     <column name="ENTITY_ID" defaultValueSequenceNext="GRAPH_LINK_SEQ" remarks="Surrogate key for the GRAPH_LINK table." type="java.sql.Types.NUMERIC(10, 0)">
        <constraints primaryKey="true" primaryKeyName="GRAPH_LINK_PK" nullable="false" />
      </column>
      <column name="FROM_GRAPH_NODE_ID" remarks="Surrogate key for the GRAPH_NODE table." type="java.sql.Types.NUMERIC(10, 0)">
        <constraints nullable="false"/>
      </column>
      <column name="TO_GRAPH_NODE_ID" remarks="Surrogate key for the GRAPH_NODE table." type="java.sql.Types.NUMERIC(10, 0)">
        <constraints nullable="false"/>
      </column>
      <column name="NAME_TXT" remarks="Graph node name." type="java.sql.Types.VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="LINK_CATEGORY" remarks="Optional category name" type="java.sql.Types.VARCHAR(50)">
        <constraints nullable="true"/>
      </column>
     <column name="LINK_TYPE" remarks="Optional type name" type="java.sql.Types.VARCHAR(50)">
        <constraints nullable="true"/>
      </column>
      <column name="LINK_DATA" remarks="Optional data" type="java.sql.Types.VARCHAR(2048)">
        <constraints nullable="true"/>
      </column>
      <column name="DESCRIPTION_TXT" remarks="Description" type="java.sql.Types.VARCHAR(500)"/>
      <column defaultValueNumeric="0" name="OPTIMISTIC_LOCK_NO" remarks="Incremented when deal is updated." type="java.sql.Types.NUMERIC(10, 0)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
